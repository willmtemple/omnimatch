{
  "$schema": "http://json.schemastore.org/tsconfig",

  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "dist",

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "sourceMap": true,
    "declaration": true
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules"]
}

